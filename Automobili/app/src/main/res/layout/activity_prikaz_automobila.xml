<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.PrikazAutomobilaActivity">

    <TextView
            android:text="TextView"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:id="@+id/opisView" android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="104dp"
            app:layout_constraintTop_toBottomOf="@+id/godisteView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="107dp" android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="253dp"
            android:layout_height="195dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="79dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="105dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="79dp"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toTopOf="@+id/markaView"/>
    <TextView
            android:text="TextView"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/godisteView" android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="104dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="107dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cenaView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/opisView"/>
    <TextView
            android:text="TextView"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/markaView" android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="104dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="107dp" android:layout_marginBottom="11dp"
            app:layout_constraintBottom_toTopOf="@+id/cenaView" app:layout_constraintTop_toBottomOf="@+id/cenaView"
            android:layout_marginTop="40dp" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/cenaView" android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="104dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="107dp" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/godisteView" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/markaView"/>
</android.support.constraint.ConstraintLayout>