<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.DodajAutomobilActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/markaText"
            android:hint="Marka" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/cenaText"
            android:hint="Cena" app:layout_constraintStart_toStartOf="@+id/markaText" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/markaText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/godisteText"
            android:hint="Godiste" app:layout_constraintStart_toStartOf="@+id/cenaText" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/cenaText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/opisText"
            android:hint="Opis" app:layout_constraintStart_toStartOf="@+id/godisteText" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/godisteText"/>
    <Button
            android:text="Unesi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unesiBtn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/opisText" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="sacuvaj"/>
    <ImageView
            android:layout_width="161dp"
            android:layout_height="146dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="125dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="125dp"
            android:layout_marginBottom="50dp" app:layout_constraintBottom_toTopOf="@+id/markaText"
            android:onClick="pickImage"/>
</android.support.constraint.ConstraintLayout>